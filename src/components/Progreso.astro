<section class="flex flex-col items-center justify-center py-8">
  <div class="relative w-40 h-40">
    <svg class="w-full h-full" viewBox="0 0 140 140">
      <!-- Fondo gris -->
      <circle
        cx="70"
        cy="70"
        r="60"
        fill="none"
        stroke="#e5e5eb"
        stroke-width="12"
      />
      <!-- Progreso rojo -->
      <circle
        id="progreso"
        cx="70"
        cy="70"
        r="60"
        fill="none"
        stroke="#ef4444"
        stroke-width="12"
        stroke-linecap="round"
        transform="rotate(-90 70 70)"
      />
    </svg>
    <div class="absolute inset-0 flex flex-col items-center justify-center">
      <span id="porcentajeTexto" class="text-3xl font-bold text-gray-800"></span>
      <span class="text-sm text-gray-500 mt-1">Recaudado</span>
    </div>
  </div>
  <div class="mt-4 text-center">
    <span id="montoRecaudado" class="block text-lg font-semibold text-gray-700"></span>
    <span id="montoTotal" class="block text-sm text-gray-500"></span>
  </div>
</section>

<script>
  const recaudado = 25000;
  const costoTotal = 811800;
  const porcentaje = ((recaudado / costoTotal) * 100).toFixed(2);
  const radio = 60;
  const circunferencia = 2 * Math.PI * radio;
  const progreso = circunferencia - (porcentaje / 100) * circunferencia;

  const circle = document.getElementById("progreso");
  circle.style.strokeDasharray = circunferencia;
  circle.style.strokeDashoffset = progreso;

  document.getElementById("porcentajeTexto").textContent = `${porcentaje}%`;
  document.getElementById("montoRecaudado").textContent = `$${recaudado.toLocaleString()} MXN`;
  document.getElementById("montoTotal").textContent = `de $${costoTotal.toLocaleString()} MXN`;
</script>
